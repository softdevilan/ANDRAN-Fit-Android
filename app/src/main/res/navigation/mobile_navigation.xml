<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.andranfitmobile.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.example.andranfitmobile.ui.workouts.WorkoutsFragment"
        android:label="Workouts"
        tools:layout="@layout/fragment_workouts">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.andranfitmobile.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_trainers"
        android:name="com.example.andranfitmobile.ui.trainers.TrainersFragment"
        android:label="Entrenadores"
        tools:layout="@layout/fragment_trainers">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

</navigation>