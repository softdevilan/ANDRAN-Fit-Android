<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    android:background="@color/black"
    tools:context=".ui.profile.ProfileFragment">

    <!-- Container para Nombre, Apellido y Fecha de Nacimiento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/container_background"
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre cliente"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fechaNacimientoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="Fecha de nacimiento"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Container para Mediciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/container_background"
        android:padding="@dimen/default_padding"
        android:layout_marginBottom="@dimen/default_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediciones Actuales"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/yellowgreen"
            android:layout_marginBottom="@dimen/default_margin" />

        <TextView
            android:id="@+id/alturaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pesoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="Peso"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/grasaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="Grasa"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/medicionFechaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="Fecha"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Container para Objetivos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/container_background"
        android:padding="@dimen/default_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objetivos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/yellowgreen"
            android:layout_marginBottom="@dimen/default_margin" />

        <TextView
            android:id="@+id/deportivosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deportivos"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fisicosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="FÃ­sicos"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>