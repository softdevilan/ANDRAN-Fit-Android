<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/bienvenidaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:text="Mensaje de bienvenida"
        android:textColor="@color/yellowgreen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu siguiente workout"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/default_margin" />

    <TextView
        android:id="@+id/noUpcomingWorkoutsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃºn no tienes workouts programados"
        android:textSize="16sp"
        android:textColor="@color/light_gray"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/default_margin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>