<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndranFitMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yellowgreen</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellowgreen</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="TextAppearance.AndranFitMobile.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/yellowgreen</item>
    </style>

    <style name="TextAppearance.AndranFitMobile.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextAppearance.AndranFitMobile.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

</resources>